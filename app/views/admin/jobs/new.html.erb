<h1> Add a job </h1>

<%= simple_form_for [:admin,@job] do |f| %>

  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :wage_lower_bound, :label => "薪资下限" %>
  <%= f.input :wage_upper_bound, :label => "薪资上限" %>
  <%= f.input :contact_email %>
  <%= f.input :is_hidden %>

  <%= f.nested_fields_for :messages do |ff| %>
    <fieldset style="border-left: 5px solid #bbb; margin-bottom: 10px; padding: 10px;">
      <legend>Messages</legend>
      <div class="form-group">
        <%= ff.label :name %>
        <%= ff.text_field :name, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= ff.label :description %>
        <%= ff.text_area :description, :class => "form-control" %>
      </div>
    </fieldset>
    <%= ff.remove_nested_fields_link "移除这个信息", :class => "btn btn-danger" %>
  <% end %>
  <p class="text-right">
    <%= f.add_nested_fields_link :messages, "新增信息", :class => "btn btn-default" %>
  </p>

  <%= f.submit "Submit" %>
<% end %>
